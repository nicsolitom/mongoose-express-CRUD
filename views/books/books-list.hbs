<h1>List of books in our database</h1>

{{#each booksArr}}
  <section class="book-summary">
    <h2>{{this.title}}</h2>
    <p>
      Author:
      {{this.author.name}}
      <br />
      Rating:
      {{this.rating}}
      <br />
      <a href="/books/{{this.id}}">More details</a>
      |
      <a href="/books/{{this.id}}/edit">Edit</a>
    </p>
      <form action="/books/{{this.id}}/delete" method="POST">
        <button>Delete</button>
      </form>

  </section>
{{/each}}